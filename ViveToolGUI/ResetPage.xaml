<Page
    x:Class="ViVeToolGUI.ResetPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls">

    <ScrollViewer>
        <StackPanel Padding="40" Spacing="24">
            <TextBlock x:Uid="Reset_Title" 
                      Style="{StaticResource TitleTextBlockStyle}"/>

            <TextBlock x:Uid="Reset_Description" 
                      Style="{StaticResource BodyTextBlockStyle}"
                      TextWrapping="Wrap"
                      Opacity="0.7"/>

            <!-- 重置选项 -->
            <StackPanel Spacing="16">
                <!-- 标准重置 -->
                <Border BorderThickness="1" 
                       BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                       Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                       CornerRadius="8"
                       Padding="20">
                    <StackPanel Spacing="12">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <FontIcon Glyph="&#xE777;" FontSize="24"/>
                            <StackPanel>
                                <TextBlock x:Uid="Reset_StandardTitle" 
                                          FontSize="18" 
                                          FontWeight="SemiBold"/>
                                <TextBlock x:Uid="Reset_StandardDescription" 
                                          TextWrapping="Wrap" 
                                          Opacity="0.7"/>
                            </StackPanel>
                        </StackPanel>
                        <Button x:Name="ResetButton" 
                               x:Uid="Reset_StandardButton"
                               Click="ResetButton_Click">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE777;" FontSize="16"/>
                                <TextBlock x:Uid="Reset_StandardButtonText"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Border>

                <!-- 完全重置 -->
                <Border BorderThickness="1" 
                       BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                       Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                       CornerRadius="8"
                       Padding="20">
                    <StackPanel Spacing="12">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <FontIcon Glyph="&#xE74D;" 
                                     FontSize="24" 
                                     Foreground="{ThemeResource SystemFillColorCriticalBrush}"/>
                            <StackPanel>
                                <TextBlock x:Uid="Reset_FullTitle" 
                                          FontSize="18" 
                                          FontWeight="SemiBold"/>
                                <TextBlock x:Uid="Reset_FullDescription" 
                                          TextWrapping="Wrap" 
                                          Opacity="0.7"/>
                            </StackPanel>
                        </StackPanel>
                        <Button x:Name="FullResetButton" 
                               x:Uid="Reset_FullButton"
                               Style="{StaticResource AccentButtonStyle}"
                               Background="{ThemeResource SystemFillColorCriticalBrush}"
                               Click="FullResetButton_Click">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE74D;" FontSize="16"/>
                                <TextBlock x:Uid="Reset_FullButtonText"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Border>

                <!-- 修复优先级 -->
                <Border BorderThickness="1" 
                       BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                       Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                       CornerRadius="8"
                       Padding="20">
                    <StackPanel Spacing="12">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <FontIcon Glyph="&#xE90F;" FontSize="24"/>
                            <StackPanel>
                                <TextBlock x:Uid="Reset_FixPriorityTitle" 
                                          FontSize="18" 
                                          FontWeight="SemiBold"/>
                                <TextBlock x:Uid="Reset_FixPriorityDescription" 
                                          TextWrapping="Wrap" 
                                          Opacity="0.7"/>
                            </StackPanel>
                        </StackPanel>
                        <Button x:Name="FixPriorityButton" 
                               x:Uid="Reset_FixPriorityButton"
                               Click="FixPriorityButton_Click">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE90F;" FontSize="16"/>
                                <TextBlock x:Uid="Reset_FixPriorityButtonText"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- 警告信息 -->
            <muxc:InfoBar x:Uid="Reset_WarningInfoBar" 
                         Severity="Warning"
                         IsOpen="True"
                         IsClosable="False"/>

            <!-- 结果显示 -->
            <Border x:Name="ResultBorder" 
                   BorderThickness="1" 
                   BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                   Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                   CornerRadius="8"
                   Padding="16"
                   Visibility="Collapsed">
                <StackPanel Spacing="8">
                    <TextBlock x:Uid="Reset_Result" 
                              FontWeight="SemiBold"/>
                    <ScrollViewer MaxHeight="200">
                        <TextBlock x:Name="ResultText" 
                                  TextWrapping="Wrap" 
                                  FontFamily="Consolas"/>
                    </ScrollViewer>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Page>