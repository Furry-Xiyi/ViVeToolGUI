<ContentDialog
    x:Class="ViVeToolGUI.Dialogs.AdminRequiredDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Administrator Required"
    CloseButtonText="Exit"
    DefaultButton="Close"
    Background="{ThemeResource AcrylicBackgroundFillColorDefaultBrush}">

    <StackPanel Spacing="20" Padding="0,8,0,0">
        <StackPanel Orientation="Horizontal" Spacing="16">
            <FontIcon Glyph="&#xE7BA;" 
                     Foreground="{ThemeResource SystemFillColorCriticalBrush}" 
                     FontSize="40"
                     VerticalAlignment="Top"
                     Margin="0,4,0,0"/>
            <StackPanel VerticalAlignment="Top" MaxWidth="400">
                <TextBlock Text="Administrator Privileges Required" 
                          FontSize="18" 
                          FontWeight="SemiBold"
                          TextWrapping="Wrap"/>
                <TextBlock Text="This application requires administrator privileges to manage Windows features." 
                          TextWrapping="Wrap"
                          Opacity="0.8"
                          Margin="0,12,0,0"/>
                <TextBlock Text="Please restart the application and accept the User Account Control (UAC) prompt to continue." 
                          TextWrapping="Wrap"
                          Opacity="0.8"
                          Margin="0,8,0,0"/>
            </StackPanel>
        </StackPanel>

        <Border Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}"
                CornerRadius="4"
                Padding="12"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1">
            <StackPanel Spacing="8">
                <TextBlock Text="Why is this needed?" 
                          FontWeight="SemiBold"
                          FontSize="14"/>
                <TextBlock Text="ViVeTool modifies Windows feature configurations, which requires elevated permissions to ensure system security."
                          TextWrapping="Wrap"
                          FontSize="12"
                          Opacity="0.7"/>
            </StackPanel>
        </Border>
    </StackPanel>
</ContentDialog>