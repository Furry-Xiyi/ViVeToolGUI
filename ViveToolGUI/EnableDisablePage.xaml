<Page
    x:Class="ViVeToolGUI.EnableDisablePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls">

    <ScrollViewer>
        <StackPanel Padding="40" Spacing="24">
            <TextBlock x:Uid="EnableDisable_Title" 
                      Style="{StaticResource TitleTextBlockStyle}"/>

            <TextBlock x:Uid="EnableDisable_Description" 
                      Style="{StaticResource BodyTextBlockStyle}"
                      TextWrapping="Wrap"
                      Opacity="0.7"/>

            <!-- 功能ID输入 -->
            <StackPanel Spacing="12">
                <TextBlock x:Uid="EnableDisable_FeatureID" 
                          FontSize="16" 
                          FontWeight="SemiBold"/>
                <TextBox x:Name="FeatureIDTextBox" 
                        PlaceholderText="12345678"
                        TextChanged="FeatureIDTextBox_TextChanged"/>
                <TextBlock x:Name="ValidationText" 
                          Foreground="Red" 
                          Visibility="Collapsed"/>
            </StackPanel>

            <!-- 变体选项 -->
            <StackPanel Spacing="12">
                <TextBlock x:Uid="EnableDisable_Variant" 
                          FontSize="16" 
                          FontWeight="SemiBold"/>
                <NumberBox x:Name="VariantNumberBox" 
                          Minimum="0" 
                          Maximum="255"
                          SpinButtonPlacementMode="Inline"
                          PlaceholderText="0"/>
            </StackPanel>

            <!-- 操作按钮 -->
            <StackPanel Orientation="Horizontal" Spacing="12">
                <Button x:Name="EnableButton" 
                       x:Uid="EnableDisable_EnableButton"
                       Style="{StaticResource AccentButtonStyle}"
                       Click="EnableButton_Click"
                       IsEnabled="False">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE73E;" FontSize="16"/>
                        <TextBlock x:Uid="EnableDisable_EnableButtonText"/>
                    </StackPanel>
                </Button>

                <Button x:Name="DisableButton" 
                       x:Uid="EnableDisable_DisableButton"
                       Click="DisableButton_Click"
                       IsEnabled="False">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE711;" FontSize="16"/>
                        <TextBlock x:Uid="EnableDisable_DisableButtonText"/>
                    </StackPanel>
                </Button>
            </StackPanel>

            <!-- 结果显示 -->
            <Border x:Name="ResultBorder" 
                   BorderThickness="1" 
                   BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                   Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                   CornerRadius="8"
                   Padding="16"
                   Visibility="Collapsed">
                <StackPanel Spacing="8">
                    <TextBlock x:Uid="EnableDisable_Result" 
                              FontWeight="SemiBold"/>
                    <ScrollViewer MaxHeight="200">
                        <TextBlock x:Name="ResultText" 
                                  TextWrapping="Wrap" 
                                  FontFamily="Consolas"/>
                    </ScrollViewer>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Page>